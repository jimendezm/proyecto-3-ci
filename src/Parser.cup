    public void imprimirTablasSimbolos(){
        for (String key: listaTablasSimbolos.keySet()) {
            System.out.println("Tabla de simbolo : " + key);
            System.out.println("Valores : ");
            for (String item : listaTablasSimbolos.get(key)) {
